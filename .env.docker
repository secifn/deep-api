# Deep Instinct API Configuration
DEEPINSTINCT_URL=https://ro.customers.deepinstinctweb.com/api/v1/
TOKENS_KEY=your_jwt_token_here

# Mattermost Webhook Configuration
MATTERMOST_WEBHOOK_URL=https://your-mattermost-server.com/hooks/xxx-your-hook-id-xxx

# Report Server Configuration
REPORT_SERVER_URL=http://report-server:8080
REPORT_SERVER_PORT=8080

# IT Parcel/Snip IT Configuration (Optional)
IT_PARCEL_API_URL=https://your-itparcel-url.com/api/v1
IT_PARCEL_TOKEN=your_itparcel_token_here

# Polling Configuration
# Interval in seconds: 60=1min, 300=5min, 600=10min
POLLING_INTERVAL=300

# Daily Report Cron Schedule (default: 8 AM daily)
# Format: minute hour day month weekday
# Examples:
#   0 8 * * *    = 8:00 AM daily
#   0 9,17 * * * = 9:00 AM and 5:00 PM daily
#   0 8 * * 1-5  = 8:00 AM weekdays only
DAILY_REPORT_CRON=0 8 * * *

# Timezone (for cron and reporting)
TZ=Asia/Bangkok
